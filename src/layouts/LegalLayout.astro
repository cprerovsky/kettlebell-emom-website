---
import Layout from '@/layouts/Layout.astro'
import PageHead from '@/components/PageHead.astro'

const { title, description } = Astro.props
---

<Layout>
  <PageHead slot="head" title={title} description={description} />

  <main class="container mx-auto px-6 py-16">
    <article class="prose prose-invert prose-lg max-w-4xl mx-auto">
      <slot />
    </article>
  </main>
</Layout>

<style is:global>
  .prose {
    color: hsl(var(--muted-foreground));
  }
  
  .prose h1 {
    color: hsl(var(--foreground));
    font-weight: 800;
    font-size: 2.25rem;
    margin-bottom: 2rem;
  }
  
  @media (min-width: 768px) {
    .prose h1 {
      font-size: 3rem;
    }
  }
  
  .prose h2 {
    color: hsl(var(--foreground));
    font-weight: 700;
    font-size: 1.5rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
  }
  
  @media (min-width: 768px) {
    .prose h2 {
      font-size: 1.875rem;
    }
  }
  
  .prose h3 {
    color: hsl(var(--foreground));
    font-weight: 600;
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  @media (min-width: 768px) {
    .prose h3 {
      font-size: 1.5rem;
    }
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.625;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1rem;
    margin-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose a {
    color: hsl(var(--primary));
  }
  
  .prose a:hover {
    text-decoration: underline;
  }
  
  .prose strong {
    color: hsl(var(--foreground));
    font-weight: 600;
  }
  
  .prose code {
    background-color: hsl(var(--secondary));
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
</style>
